{
  "name": "xor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/xor/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/xor",
        "main": "packages/xor/src/index.ts",
        "tsConfig": "packages/xor/tsconfig.lib.json",
        "assets": ["packages/xor/*.md"],
        "format": ["esm", "cjs"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs xor {args.ver} {args.registry} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/xor/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/xor"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/xor"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  },
  "tags": []
}
